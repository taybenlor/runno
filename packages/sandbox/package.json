{
  "name": "@runno/sandbox",
  "version": "0.10.0",
  "description": "Run code inside the Runno WebAssembly sandbox.",
  "keywords": [
    "wasm",
    "sandbox"
  ],
  "author": "Ben Taylor <me@taybenlor.com>",
  "homepage": "https://runno.dev",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker.d.ts",
      "import": "./dist/worker.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taybenlor/runno.git"
  },
  "scripts": {
    "bootstrap": "cp -R ../../langs/ ./public/langs/",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup && cp -R ./public/langs/ ./dist/langs/"
  },
  "bugs": {
    "url": "https://github.com/taybenlor/runno/issues"
  },
  "dependencies": {
    "@runno/wasi": "^0.10.0",
    "@std/tar": "npm:@jsr/std__tar@^0.1.3"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.7",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
